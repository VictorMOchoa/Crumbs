<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#607D8B"
    tools:context="com.tumblr.breadcrumbs492.testapplication.RegisterActivity">

    <ImageView
        android:id="@+id/whiteRec"
        android:layout_width="350dp"
        android:layout_height="380dp"
        android:src="@drawable/white_rectangle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="120dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#607D8B"
        android:text="Username:"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignTop="@+id/whiteRec"
        android:layout_alignLeft="@+id/whiteRec"
        android:layout_alignStart="@+id/whiteRec"
        android:layout_marginTop="21dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_username"
        android:hint="Username"
        android:textColor="#607D8B"
        android:layout_alignTop="@+id/tv_username"
        android:layout_toRightOf="@+id/tv_username"
        android:layout_alignRight="@+id/whiteRec"
        android:layout_alignEnd="@+id/whiteRec"
        android:maxLines="1"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_password"

        android:layout_weight="1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#607D8B"
        android:text="Password:"
        android:layout_below="@+id/profile_username"
        android:layout_alignLeft="@+id/tv_username"
        android:layout_alignStart="@+id/tv_username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/profile_password"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColor="#607D8B"
        android:layout_below="@+id/profile_username"
        android:layout_alignLeft="@+id/profile_username"
        android:layout_alignStart="@+id/profile_username"
        android:maxLines="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_email"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="E-mail:"
        android:layout_weight="1"
        android:textColor="#607D8B"
        android:layout_below="@+id/profile_password"
        android:layout_alignLeft="@+id/tv_password"
        android:layout_alignStart="@+id/tv_password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_email"
        android:inputType="textEmailAddress"
        android:hint="E-Mail"
        android:ems="10"
        android:textColor="#607D8B"
        android:layout_alignTop="@+id/tv_email"
        android:layout_alignLeft="@+id/profile_password"
        android:layout_alignStart="@+id/profile_password"
        android:maxLines="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_first_name"
        android:layout_weight="1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="First Name:"
        android:textColor="#607D8B"
        android:layout_below="@+id/profile_email"
        android:layout_alignLeft="@+id/tv_email"
        android:layout_alignStart="@+id/tv_email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:id="@+id/profile_firstname"
        android:inputType="textPersonName"
        android:hint="First Name"
        android:textColor="#607D8B"
        android:layout_alignTop="@+id/tv_first_name"
        android:layout_alignLeft="@+id/profile_email"
        android:layout_alignStart="@+id/profile_email"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:maxLines="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_last_name"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Last Name:"
        android:layout_weight="1"
        android:textColor="#607D8B"
        android:layout_below="@+id/profile_firstname"
        android:layout_alignLeft="@+id/tv_first_name"
        android:layout_alignStart="@+id/tv_first_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_lastname"
        android:layout_weight="2"
        android:inputType="textPersonName"
        android:hint="Last Name"
        android:textColor="#607D8B"
        android:layout_alignTop="@+id/tv_last_name"
        android:layout_alignLeft="@+id/profile_firstname"
        android:layout_alignStart="@+id/profile_firstname"
        android:layout_alignRight="@+id/profile_username"
        android:layout_alignEnd="@+id/profile_username"
        android:maxLines="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_fname"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Gender:"
        android:layout_weight="1"
        android:textColor="#607D8B"
        android:layout_below="@+id/profile_lastname"
        android:layout_alignLeft="@+id/tv_last_name"
        android:layout_alignStart="@+id/tv_last_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_gender"
        android:hint="Gender"
        android:textColor="#607D8B"
        android:layout_weight="2"
        android:layout_below="@+id/profile_lastname"
        android:layout_alignLeft="@+id/profile_lastname"
        android:layout_alignStart="@+id/profile_lastname"
        android:layout_alignRight="@+id/profile_lastname"
        android:layout_alignEnd="@+id/profile_lastname"
        android:maxLines="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_cityAndState"
        android:layout_weight="1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="City:"
        android:textColor="#607D8B"
        android:layout_below="@+id/profile_gender"
        android:layout_alignLeft="@+id/tv_fname"
        android:layout_alignStart="@+id/tv_fname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_city"
        android:layout_weight="2"
        android:textColor="#607D8B"
        android:hint="City"
        android:layout_alignTop="@+id/tv_cityAndState"
        android:layout_alignLeft="@+id/profile_gender"
        android:layout_alignStart="@+id/profile_gender"
        android:layout_alignRight="@+id/profile_gender"
        android:layout_alignEnd="@+id/profile_gender"
        android:maxLines="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_state"
        android:layout_weight="1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#607D8B"
        android:text="State:"
        android:layout_below="@+id/profile_city"
        android:layout_alignLeft="@+id/tv_cityAndState"
        android:layout_alignStart="@+id/tv_cityAndState" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textColor="#607D8B"
        android:id="@+id/profile_state"
        android:layout_weight="2"
        android:hint="State"
        android:layout_below="@+id/profile_city"
        android:layout_alignLeft="@+id/profile_city"
        android:layout_alignStart="@+id/profile_city"
        android:maxLines="1"/>

    <Button
        android:id="@+id/profile_editprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:onClick="editProfile"
        android:background="#FFFFFF"
        android:textColor="#607D8B"
        android:layout_marginTop="420dp"
        />


</RelativeLayout>